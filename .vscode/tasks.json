{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}",
        "env": {
            "PATH": "${env:HOME}/.pixi/bin:${env:PATH}"
        }
    },
    "tasks": [
        {
            "label": "config_release",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "config"],
            "group": "build",
            "detail": "CMakeの設定（Release）",
            "problemMatcher": []
        },
        {
            "label": "build_release",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "build"],
            "group": { "kind": "build", "isDefault": true },
            "detail": "CMakeでプロジェクトをビルド",
            "dependsOn": ["config_release"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "config_debug",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "config-debug"],
            "group": "build",
            "detail": "CMakeの設定（Debug）",
            "problemMatcher": []
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "build"],
            "group": { "kind": "build", "isDefault": true },
            "detail": "CMakeでプロジェクトをビルド",
            "dependsOn": ["config_debug"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "cmake_clean",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "clean"],
            "group": "build",
            "detail": "ビルド成果物をクリーンアップ"
        },
        {
            "label": "ctest",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "test"],
            "group": "test",
            "detail": "テストを実行",
            "dependsOn": ["build_release"]
        },
        {
            "label": "quality_format",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "format"],
            "group": "build",
            "detail": "clang-formatでコードをフォーマット",
            "dependsOn": ["config_release"]
        },
        {
            "label": "quality_lint",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "lint"],
            "group": "build",
            "detail": "clang-tidyでコードをリント",
            "dependsOn": ["config_release"]
        },
        {
            "label": "quality_fullcheck",
            "type": "shell",
            "command": "pixi",
            "args": ["run", "fullcheck"],
            "group": "build",
            "detail": "全品質チェックを実行",
            "dependsOn": ["config_release"]
        }
    ]
}
